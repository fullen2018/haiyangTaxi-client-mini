/**app.wxss**/
 /* 引用toast的样式 */
@import "./components/toast/toast.wxss"; 
.container {
  padding: 0;
  margin: 0;
  font-size: 30rpx;
  font-family: "微软雅黑";
} 
.bar{
  width: 100%;
  height: 1px;
  background: #ebebeb;
}
.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_content {  
  width: 50%;  
  padding: 20rpx;  
  background: rgba(0, 0, 0, .65);  
  border-radius: 18rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 