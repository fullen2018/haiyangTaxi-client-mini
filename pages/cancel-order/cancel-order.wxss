/* pages/cancel-order/cancel-order.wxss */
.cancelHead{
  padding: 50rpx 25rpx;
  border-bottom: 1px solid #ececec;
}
.cancelHead>h1{
  font-weight: bold;
  font-size: 28rpx;
}
.cancelHead>view{
  font-size: 22rpx;
  color: #a5a5a5;
  margin-top: 5rpx;
}
.cancelList{
  padding-left:25rpx; 
  padding-bottom: 100rpx;
}
.cancelList .itemReasons{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eaeaea;
  padding: 30rpx 25rpx 30rpx 0;
  color: #a3a3a3;
  position: relative;
}
.itemReasonsASActive{
  color: #4d4d4d;
}
.btn{
  width: 100%;
  background: #484b5a;
  color: #fff;
  border-radius: 0;
  margin-top: 20rpx;
  font-size: 15px;
  font-weight: bold;
  padding: 6rpx 0;
  position: fixed;
  bottom: 0;
  left: 0;
}